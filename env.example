# Frontend Environment Variables
# Copy this file to .env.local and update values as needed

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-supabase-anon-key

# Backend API URL
NEXT_PUBLIC_API_URL=https://grupo-backend.onrender.com/api

# For local development, you can override with:
# NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Clerk Authentication (Required for production)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk URLs (Optional - defaults to Clerk's hosted pages)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/buyer-portal
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/buyer-portal
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/buyer-portal
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/buyer-portal